{
  "name": "roza-news",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Professional news portal with AI-powered CMS, real-time weather, and admin dashboard",
  "author": "Subhan Ahmad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RozaNewsOfficial/roza-news.git"
  },
  "keywords": [
    "news",
    "react",
    "typescript",
    "tailwind",
    "pwa",
    "cms",
    "firebase",
    "ai",
    "weather"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "preview:prod": "vite preview --port 4173 --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "deploy": "npm run build && firebase deploy --only hosting",
    "serve": "firebase emulators:start",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
    "@google/genai": "^0.1.1",
    "firebase": "^10.12.0",
    "lucide-react": "^0.378.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.23.0",
    "recharts": "^2.12.7"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie > 0",
      "not samsung < 10",
      "not android < 100"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
