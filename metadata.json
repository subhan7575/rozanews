{
  "name": "Roza News",
  "description": "A professional, scalable news portal with AI-powered CMS, real-time weather, video feed, and admin dashboard.",
  "version": "1.0.0",
  "author": "Subhan Ahmad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RozaNewsOfficial/roza-news"
  },
  "keywords": [
    "news",
    "react",
    "typescript",
    "tailwind",
    "pwa",
    "cms",
    "firebase",
    "ai",
    "weather",
    "admin-dashboard"
  ],
  "homepage": "https://rozanews.com",
  "bugs": {
    "url": "https://github.com/RozaNewsOfficial/roza-news/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "deployment": {
    "platforms": ["vercel", "netlify", "github-pages", "firebase-hosting"],
    "build_command": "npm run build",
    "output_directory": "dist",
    "environment_variables": {
      "VITE_FIREBASE_API_KEY": "your_firebase_api_key",
      "VITE_GEMINI_API_KEY": "your_gemini_api_key",
      "VITE_WEATHER_API_KEY": "optional"
    }
  },
  "features": {
    "authentication": ["email", "google", "phone"],
    "cms": {
      "articles": true,
      "videos": true,
      "ads": true,
      "jobs": true,
      "users": true
    },
    "integrations": {
      "firebase": true,
      "gemini-ai": true,
      "open-meteo": true,
      "cloudinary": true,
      "github-sync": true
    },
    "ui": {
      "dark_mode": true,
      "responsive": true,
      "pwa": true,
      "accessibility": true
    }
  },
  "security": {
    "csp": "script-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com https://fonts.googleapis.com https://fonts.gstatic.com https://picsum.photos https://*.firebaseio.com https://*.googleapis.com;",
    "permissions": ["geolocation", "notifications", "clipboard-write"],
    "https_required": true
  },
  "performance": {
    "lazy_loading": true,
    "code_splitting": true,
    "image_optimization": true,
    "caching": "service-worker"
  },
  "maintenance": {
    "backup_frequency": "daily",
    "monitoring": "uptime-robot",
    "support_email": "rozanewsofficial@gmail.com"
  },
  "social": {
    "twitter": "@RozaNews",
    "facebook": "RozaNews",
    "linkedin": "company/roza-news",
    "youtube": "@RozaNews.online"
  },
  "analytics": {
    "google_analytics": "G-XXXXXXXXXX",
    "microsoft_clarity": "optional"
  }
}
